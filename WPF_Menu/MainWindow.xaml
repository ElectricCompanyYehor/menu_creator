<Window x:Class="WPF_Menu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPF_Menu"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Menu Creator"
        Width="800"
        Height="450"
        Icon="/piece-of-paper.png"
        mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="/FT_15.12.23_5factsXmas4_promo.jpg" />
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="429*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="220" />
        </Grid.ColumnDefinitions>
        <Grid Grid.RowSpan="2" Grid.Column="0">
            <Button x:Name="section1"
                    Margin="10,175,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Visibility="Collapsed"
                    Content="section" />
            <Button x:Name="section2"
                    Margin="10,193,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Visibility="Collapsed"
                    Content="section" />
            <Button x:Name="section3"
                    Margin="10,213,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Visibility="Collapsed"
                    Content="section" />
            <Button x:Name="section4"
                    Margin="10,233,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Visibility="Collapsed"
                    Content="section" />
            <Button x:Name="section5"
                    Margin="10,253,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Visibility="Collapsed"
                    Content="section" />
            <Button x:Name="section6"
                    Margin="10,271,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Visibility="Collapsed"
                    Content="section" />
            <Button x:Name="section7"
                    Margin="10,291,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Visibility="Collapsed"
                    Content="section" />
            <Button x:Name="section8"
                    Margin="10,311,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Visibility="Collapsed"
                    Content="section" />
            <Button x:Name="section9"
                    Margin="10,331,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Visibility="Collapsed"
                    Content="section" />
            <Button x:Name="section10"
                    Margin="10,351,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Visibility="Collapsed"
                    Content="section" />
            <Button Width="44"
                    Height="48"
                    Margin="3,115,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    FontSize="35"
                    Visibility="Collapsed"
                    Content="⬇" />
            <Button Width="44"
                    Height="50"
                    Margin="3,67,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    FontSize="35"
                    Visibility="Collapsed"
                    Content="⬆" />
        </Grid>
        <Grid Grid.RowSpan="2" Grid.Column="1">
            <TextBox x:Name="SectionName"
                     Width="386"
                     Height="48"
                     Margin="52,20,0,0"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     Background="#55FFFFFF"
                     FontSize="35"
                     Text="{Binding ViewModel.SelectedTab.Name,
                                    Mode=TwoWay}"
                     TextAlignment="Center"
                     TextWrapping="Wrap" />
            <DataGrid x:Name="DishesDataGrid"
                      Margin="10,74,10,0"
                      ItemsSource="{Binding ViewModel.SelectedTab.Dishes}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="True"
                      CanUserDeleteRows="True"
                      SelectedValue="{Binding ViewModel.SelectedTab.SelectedDish}">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*"
                                        Binding="{Binding Path=Name}"
                                        Header="Name" />
                    <DataGridTextColumn Width="*"
                                        Binding="{Binding Path=Weight}"
                                        Header="Weight" />
                    <DataGridTextColumn Width="95"
                                        Binding="{Binding Path=CountOfPieces}"
                                        Header="Count of pieces" />
                    <DataGridTextColumn Width="150"
                                        Binding="{Binding Path=CountOfPiecesComment}"
                                        Header="Count of pieces comment" />
                    <DataGridTemplateColumn Width="*"
                                            Header="Unit"
                                            IsReadOnly="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding ElementName=DishesDataGrid, Path=DataContext.ViewModel.Units, Mode=OneTime}" SelectedItem="{Binding Unit, Mode=TwoWay}">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Width="*"
                                        Binding="{Binding Path=Price}"
                                        Header="Price" />
                    <DataGridTextColumn Width="*"
                                        Binding="{Binding Path=Currency}"
                                        Header="Currency"
                                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Grid.RowSpan="2" Grid.Column="2">

            <Button x:Name="SaveButton"
                    Width="100"
                    Height="21"
                    Margin="6,6,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Click="SaveButton_click"
                    RenderTransformOrigin="0.5,0.5"
                    Content="Save or Save As" />
            <CheckBox x:Name="Auto_save"
                      Width="82"
                      Height="21"
                      Margin="611,10,0,0"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Left"
                      Content="Auto Save" />
            <Button Margin="29,50,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Click="Button_Click"
                    Content="Add">
                <Button.Effect>
                    <DropShadowEffect BlurRadius="5"
                                      Direction="50"
                                      Opacity="1"
                                      ShadowDepth="22" />
                </Button.Effect>
            </Button>
            <ComboBox Width="120"
                      Margin="0,130,10,0"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Right"
                      ItemsSource="{Binding ViewModel.Currencies}"
                      SelectedItem="{Binding ViewModel.Currency,
                                             Mode=TwoWay}" />
            <TextBlock Margin="0,98,65,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Right"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#FF8A8C98"
                       Text="Settings:"
                       TextWrapping="Wrap" />
            <TextBlock Height="19"
                       Margin="0,133,142,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Right"
                       FontSize="15"
                       FontWeight="Bold"
                       Foreground="#FF94B5F1"
                       Text="Currency"
                       TextWrapping="Wrap" />
            <TextBlock Margin="101,44,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Foreground="#FF9FF48A"
                       Text="Search:"
                       TextWrapping="Wrap"
                       Visibility="Collapsed" />
            <Rectangle Width="49"
                       Height="50"
                       Margin="5,165,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Fill="#FFD9ED92"
                       Stroke="Black" />
            <Rectangle Width="48"
                       Height="50"
                       Margin="62,165,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Fill="#FFB5E48C"
                       Stroke="Black" />
            <Rectangle Width="48"
                       Height="50"
                       Margin="5,221,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Fill="#FF99D98C"
                       Stroke="Black" />
            <Rectangle Width="48"
                       Height="50"
                       Margin="62,221,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Fill="#FF76C893"
                       Stroke="Black" />
            <Rectangle Width="48"
                       Height="50"
                       Margin="126,196,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Fill="#FF52B69A"
                       Stroke="Black" />
            <Rectangle Width="49"
                       Height="50"
                       Margin="4,299,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Fill="#FF34A0A4"
                       Stroke="Black" />
            <Rectangle Width="48"
                       Height="50"
                       Margin="62,299,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Fill="#FF168AAD"
                       Stroke="Black" />
            <Rectangle Width="48"
                       Height="50"
                       Margin="5,354,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Fill="#FF1A759F"
                       Stroke="Black" />
            <Rectangle Width="48"
                       Height="50"
                       Margin="62,354,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Fill="#FF1E6091"
                       Stroke="Black" />
            <Rectangle Width="48"
                       Height="50"
                       Margin="126,329,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Fill="#FF184E77"
                       Stroke="Black" />
            <TextBox Width="73"
                     Margin="101,60,0,0"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     Text="TextBox"
                     TextWrapping="Wrap"
                     Visibility="Collapsed" />
            <Button Width="18"
                    Height="18"
                    Margin="175,60,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    FontSize="11"
                    Visibility="Collapsed"
                    Content="🔍" />
            <Button Width="10"
                    Height="16"
                    Margin="165,44,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Visibility="Collapsed"
                    Content="i" />
            <ComboBox Width="120"
                      Margin="86,49,0,0"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Left">
                <Button Content="Button" />
                <TextBox Width="120"
                         Text="TextBox"
                         TextWrapping="Wrap" />
            </ComboBox>
            <Button x:Name="OpenButton"
                    Width="74"
                    Height="21"
                    Margin="140,6,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Click="OpenButton_click"
                    RenderTransformOrigin="0.5,0.5"
                    Content="Open File" />
        </Grid>


    </Grid>
</Window>
